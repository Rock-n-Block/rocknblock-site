mixin hero
	section.hero-10k
		.about
			img.about__desc-img(src="../../img/10knft/desc.svg" alt="nft generator")
			img.about__title-img(src="../../img/10knft/title.svg" alt="10k logo")
			h2 Generate 10,000 randomly created NFTs based on traits like CryptoPunks
			picture
				source(type="image/webp" srcSet="../../img/10knft/arts-mobile.webp" media="(max-width: 768px)")
				source(type="image/webp" srcSet="../../img/10knft/arts.webp" media="(min-width: 768px)")
