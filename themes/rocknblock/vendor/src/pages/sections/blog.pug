mixin pg-title(title, cl)
  section(class=`pg-title ${cl}`)
    .container
      h1= title

mixin blog-list
  section.blog
    .container
      span.blog-nav-title Show Me
      .blog-list
        +blog-navigation
        +blog-items

mixin blog-navigation
  - var links = ['All Topics', 'Popular', 'Latest', 'Business', 'Design', 'Geeks', 'Insights', 'Management', 'Tech'];

  .blog-nav
    .blog-nav-ls
      each nav, index in links.length ? links : ['No values']
        if index === 0
          span.blog-nav-item.active= nav
        else
          span.blog-nav-item= nav

