include blocks

mixin hero()
  section.bridge-hero.hero(style="background-image: url('../../img/bridge/hero/hero-bg.jpg')")
    .hero__container.container
      .hero__content
        h1.hero__title.title Cross-Chain Solutions
        p.hero__subtitle Token bridges enable the flow of value from one chain to another and back
        a.button(href="#contact-us") Apply now
          img(loading='lazy' src='../../img/icons/icon-arrow-right-mask.svg' alt='arrow right')
      .hero__img
        +webpImg('lazy',`../../img/bridge/hero/hero-form`,'png','Cross-chain form')

mixin what-is()
  .what
    .container.what__container
      h2.what__title.title
        span(style="color: #DC2C2C; display: block;") What is 
        span cross-chain bridge?
    .what__img
      +webpImg('lazy',`../../img/bridge/what/what`,'png','cross-chain bridge')
    .container.what__container
      p.what__discription Cross-chain bridge allows to wrap a token to other blockchain standards and enable secure swap of tokens with 1:1 ratio across different networks.
      p.what__discription_sub.what__discription Along with the project's need to reach bigger audiences, increase the variety of trading platforms, and establish competitive transaction terms for holders, the need to establish a cross-chain bridge arises.

mixin how-it-works()
  section#how.how
    .container.how__container
      h2.how__title.title How it works
      .how__steps
        .step
          .step__circle
            span 1
          p.step__description Tx is sent from user to the swap contract in Network A
        .step
          .step__circle
            span 2
          p.step__description The tokens are locked in the swap contract in Network A
        .step
          .step__circle
            span 3
          p.step__description Tokens are sent from the swap contract in Network B to the user
      .how__img
        +webpImg('lazy',`../../img/bridge/how-it-works/chain-bridge`,'png','chain-bridge')

